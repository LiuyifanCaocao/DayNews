<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>
    <style name="logonFragment">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>
    <style name="radio_button">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/text</item>
        <item name="android:background"> @drawable/background</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="editview">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/editview</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">@color/gray2</item>

    </style>
    <style name="editview_feedback">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/editview_feedback</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColorHint">@color/gray2</item>

    </style>
    <style name="text_size">
        <item name="android:textSize">16dp</item>
    </style>
    <style name="text_size2">
        <item name="android:textSize">25dp</item>
    </style>
    <style name="download">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/report</item>
        <item name="android:button">@null</item>
    </style>

</resources>
