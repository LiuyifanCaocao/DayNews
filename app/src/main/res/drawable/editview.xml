<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused = "false">
        <shape>
            <corners android:radius="300dp"></corners>
            <stroke android:color="@color/gray4" android:width="1dp"></stroke>
            <size android:height="40dp" android:width="@dimen/activity_horizontal_margin"></size>
        </shape>
    </item>
    <item android:state_focused = "true">
        <shape>
            <corners android:radius="300dp"></corners>
            <stroke android:color="@color/pink" android:width="1dp"></stroke>
            <size android:height="40dp" android:width="@dimen/activity_horizontal_margin"></size>
        </shape>
    </item>

</selector>