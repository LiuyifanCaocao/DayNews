<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jredu.liuyifan.mygoalapplication.activity.HomeActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/homeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/choose"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"></FrameLayout>

        <RadioGroup
            android:id="@+id/choose"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray0"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/homeFragment_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:paddingTop="8dp"
                android:checked="true"
                android:drawableTop="@drawable/checkhome"
                android:gravity="center"
                android:text="首页"
                android:textColor="@drawable/text"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/videoFragment_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/checkvedio"
                android:gravity="center"
                android:text="视频"
                android:textColor="@drawable/text"
                android:textSize="10sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/attentionFragment_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/checkattention"
                android:gravity="center"
                android:text="关注"
                android:textColor="@drawable/text"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/logonFragment_RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/checklogon"
                android:gravity="center"
                android:text="登录"
                android:paddingTop="8dp"
                android:textColor="@drawable/text"
                android:textSize="10sp" />
        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/white0_0">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/w2345_image_file_copy_13" />

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_view"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="极品草草"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout_botton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="@drawable/right">

            <RelativeLayout
                android:id="@+id/relativeLayout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="269dp">

                <ImageView
                    android:id="@+id/shoucang"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bookmark30" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shoucang"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="我的相册"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="269dp">

                <ImageView
                    android:id="@+id/shoucang2"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bookmark30" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shoucang2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="我的音乐"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginTop="269dp">

                <ImageView
                    android:id="@+id/shoucang3"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/bookmark30" />

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shoucang3"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="我的设置"
                    android:textSize="14sp" />
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
