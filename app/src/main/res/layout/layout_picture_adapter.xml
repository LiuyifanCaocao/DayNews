<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="5dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginRight="20dp"
        android:textColor="@color/black2"
        android:text="1" />

    <RelativeLayout
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:id="@+id/img">

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chatroom_small_loading"
            android:layout_centerInParent="true"
            android:id="@+id/load"
            android:visibility="gone"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/ctime"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/img"
        android:textSize="12sp"
        android:text="52" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ctime"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linearLayout1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/comment"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_view_comment"
                    android:src="@drawable/comment_like_icon_night"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:text="1300"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/text_comment"
                    android:layout_toRightOf="@+id/image_view_comment" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/add_all_dynamic"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:id="@+id/text_comment_add_1"
                    android:visibility="gone"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/text_comment" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/digdown"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_view_digdown"
                    android:src="@drawable/digdown_video_normal_night"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp"
                    android:text="1300"
                    android:gravity="center"
                    android:id="@+id/text_digdown"
                    android:layout_toRightOf="@+id/image_view_digdown" />
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/add_all_dynamic"
                    android:layout_marginLeft="2dp"
                    android:layout_centerVertical="true"
                    android:textSize="12sp"
                    android:id="@+id/text_digdown_add_1"
                    android:visibility="gone"
                    android:layout_toRightOf="@+id/text_digdown" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/review"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/image_view_review"
                    android:src="@drawable/new_review_tabbar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:text="1300"
                    android:layout_marginLeft="2dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:id="@+id/text_review"
                    android:layout_toRightOf="@+id/image_view_review" />
            </RelativeLayout>
        </LinearLayout>

        <CheckBox
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toLeftOf="@+id/three_img"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:button="@null"
            android:background="@drawable/checked_collection"
            android:focusable="false"
            android:id="@+id/two_img"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/new_share_tabbar_normal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/three_img"/>

    </RelativeLayout>


</RelativeLayout>
